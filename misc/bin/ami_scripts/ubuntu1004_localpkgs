#!/bin/bash

sudo apt-get -y update || exit 1

# cleanup in case we've run the other scenario before...
sudo apt-get -y remove libgdal1-1.6.0 \
    libgdal1-dev \
    libxml2 libxml2-dev \
    libxslt1.1 libxslt1-dev

sudo apt-get -y install \
    build-essential \
    git-core \
    libgdal1-dev \
    libgdal1-1.6.0 \
    libproj-dev \
    libproj0 \
    libxml2 \
    libxml2-dev \
    libxslt1.1 \
    libxslt1-dev \
    postgresql-8.4-postgis \
    postgresql-server-dev-8.4 \
    python-distribute  \
    python-virtualenv \
    python2.6 \
    python2.6-dev \
    libjpeg62-dev \
    libgif-dev \
    libpng-dev \
    zlib1g-dev \
    subversion \
    unzip \
    wget || exit 1

sudo pip install --no-install "GDAL>=1.6,<1.7a"
sudo rm -f build/GDAL/setup.cfg
sudo python setup.py build_ext --gdal-config=gdal-config \
    --library-dirs=/usr/lib \
    --libraries=gdal1.6.0 \
    --include-dirs=/usr/include/gdal \
   install



sudo ldconfig || exit 1
echo Rebooting
sudo reboot
